@page "{id:int}"
@model todolist.Pages.Assignments.EditModel
@{
    ViewData["Title"] = "Edit Assignment";
}
<p class="display-4"> Edit Assignment </p>

@await Html.PartialAsync("_Form", new Assignments.FormModel
{
    Assignment = Model.Assignment,
    SubmitValue = "Edit"
});

<a class="btn btn-dark mt-4" 
   asp-page="/Assignments/Details"
   asp-route-id="@Model.Assignment.Id"> 
   Back to Assignment
</a>
