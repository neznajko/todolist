@page "{id:int}"
@model Operations.DeleteModel
@{
    ViewData["Title"] = "Delete Operation";
}
<h1 class="display-4"> Delete Operation </h1>
<p> Are you sure you want to delete this operation? </p>
<form method="POST">
    <input type="hidden" asp-for="Operation.Id" />
    <button type="submit" class="btn btn-danger mt-4"> Delete </button>
</form>

<a class="btn btn-dark mt-4" 
   asp-page="/Operations/Details"
   asp-route-id="@Model.Operation.Id"> 
   Back to Operation
</a>
