@page "{id:int}"
@model Operations.DetailsModel
@{
    ViewData["Title"] = "Operation Details";
}

<div class="fs-3"> 
    <p> 
        <span class="fw-bold">
            Codename( 
        </span> 
        @Model.Operation.Codename 
        <span class="fw-bold"> ) </span>
    </p>
    <p> 
        <span class="fw-bold"> 
            Status( 
        </span> 
        @Model.Operation.Status 
        <span class="fw-bold"> ) </span>
    </p>
</div>
<p class="display-6"> Missions </p>
<ul class="fs-4">
    @foreach (var mission in Model.Operation.Missions)
    {
        <li> 
            <a asp-page="/Missions/Details" asp-route-id="@mission.Id"> 
                @mission.IntelReport
            </a>
        </li>
    }
</ul>
<a class="btn btn-primary mt-4" asp-page="/Operations/Edit" asp-route-id="@Model.Operation.Id"> Edit </a>
<a class="btn btn-danger mt-4" asp-page="/Operations/Delete" asp-route-id="@Model.Operation.Id"> Delete </a>
<a class="btn btn-primary mt-4" asp-page="/Missions/Create" asp-route-operationId="@Model.Operation.Id"> New Mission </a>
<a class="btn btn-primary mt-4" asp-page="/Operations/Index"> Back to List </a>