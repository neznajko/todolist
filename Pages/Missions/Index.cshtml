@page
@model Missions.IndexModel
@{
    ViewData["Title"] = "M i s s i o n s";
}
<div class="list-con">
    <div class="list-title">@ViewData["Title"]</div>
    <div class="list">
        @foreach( var mission in Model.Missions ){
            <div class="list-item">
                <a asp-page="/Missions/Details"
                   asp-route-id="@mission.Id">
                   <i class="bi bi-caret-right-fill"></i>
                   @mission.IntelReport
                </a>
                <p>@mission.Status</p>    
            </div>
        }
    </div>
    <div class="list-footer">
        <a class="btn btn-dark"
           asp-page="/Index"> Back </a>
    </div>
</div>
